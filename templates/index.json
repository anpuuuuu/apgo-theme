on: all 0.4s cubic-bezier(0.4, 0, 0.2, 1); } .cinematic-video-section .play-control.show { opacity: 1; transform: translate(-50%, -50%) scale(1); } .cinematic-video-section .play-control:hover { background: rgba(240, 132, 24, 0.25); border-color: var(--primary-orange); transform: translate(-50%, -50%) scale(1.1); } .cinematic-video-section .play-icon { width: 0; height: 0; border-left: 20px solid var(--primary-orange); border-top: 12px solid transparent; border-bottom: 12px solid transparent; margin-left: 4px; filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3)); } /* Play status indicator */ .cinematic-video-section .status-indicator { position: absolute; top: 30px; right: 30px; width: 12px; height: 12px; background: var(--primary-orange); border-radius: 50%; opacity: 0; box-shadow: 0 0 10px var(--primary-orange), 0 0 20px rgba(240, 132, 24, 0.5); animation: cinematic-pulse 2s ease-in-out infinite; } .cinematic-video-section .status-indicator.active { opacity: 1; } @keyframes cinematic-pulse { 0%, 100% { transform: scale(1); box-shadow: 0 0 10px var(--primary-orange), 0 0 20px rgba(240, 132, 24, 0.5); } 50% { transform: scale(1.2); box-shadow: 0 0 20px var(--primary-orange), 0 0 40px rgba(240, 132, 24, 0.7); } } /* Progress bar */ .cinematic-video-section .progress-track { position: absolute; bottom: 0; left: 0; width: 100%; height: 3px; background: rgba(255, 255, 255, 0.1); border-radius: 0 0 16px 16px; overflow: hidden; } .cinematic-video-section .progress-bar { height: 100%; width: 0%; background: linear-gradient(90deg, var(--primary-orange), var(--secondary-orange)); border-radius: inherit; transition: width 0.1s ease; box-shadow: 0 0 10px rgba(240, 132, 24, 0.6); } /* Ambient lighting effect */ .cinematic-video-section .ambient-glow { position: absolute; top: 50%; left: 50%; width: 120%; height: 120%; transform: translate(-50%, -50%); background: radial-gradient( ellipse at center, rgba(240, 132, 24, 0.05) 0%, rgba(255, 154, 60, 0.03) 40%, transparent 70% ); z-index: -3; animation: cinematic-ambientPulse 8s ease-in-out infinite; } @keyframes cinematic-ambientPulse { 0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.5; } 50% { transform: translate(-50%, -50%) scale(1.1); opacity: 0.8; } } /* Loading animation */ .cinematic-video-section .loading-ring { position: absolute; top: 50%; left: 50%; width: 60px; height: 60px; transform: translate(-50%, -50%); opacity: 1; transition: opacity 0.5s ease; } .cinematic-video-section .loading-ring.hide { opacity: 0; } .cinematic-video-section .loading-ring::before { content: ''; position: absolute; width: 60px; height: 60px; border: 3px solid transparent; border-top: 3px solid var(--primary-orange); border-radius: 50%; animation: cinematic-loadingSpin 1.5s linear infinite; } .cinematic-video-section .loading-ring::after { content: ''; position: absolute; top: 6px; left: 6px; width: 48px; height: 48px; border: 2px solid transparent; border-bottom: 2px solid var(--secondary-orange); border-radius: 50%; animation: cinematic-loadingSpin 1s linear infinite reverse; } @keyframes cinematic-loadingSpin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } } /* Responsive design */ @media (max-width: 1024px) { .cinematic-video-section { height: 100vh; min-height: 600px; padding: 8vh 0; } .cinematic-video-section .video-stage { width: 90%; } .cinematic-video-section .play-control { width: 70px; height: 70px; } .cinematic-video-section .play-icon { border-left-width: 16px; border-top-width: 10px; border-bottom-width: 10px; } } @media (max-width: 768px) { .cinematic-video-section { min-height: 500px; height: 80vh; padding: 5vh 0; } .cinematic-video-section .video-stage { width: 95%; } .cinematic-video-section .play-control { width: 60px; height: 60px; } .cinematic-video-section .play-icon { border-left-width: 14px; border-top-width: 8px; border-bottom-width: 8px; } .cinematic-video-section .status-indicator { top: 20px; right: 20px; width: 10px; height: 10px; } } @media (max-width: 480px) { .cinematic-video-section { min-height: 400px; height: 70vh; padding: 3vh 0; } .cinematic-video-section .video-stage::before { top: -4px; left: -4px; right: -4px; bottom: -4px; } .cinematic-video-section .video-stage::after { top: -2px; left: -2px; right: -2px; bottom: -2px; } } /* High resolution optimization */ @media (min-width: 1920px) { .cinematic-video-section .video-stage { max-width: 1600px; } .cinematic-video-section .play-control { width: 100px; height: 100px; } .cinematic-video-section .play-icon { border-left-width: 24px; border-top-width: 15px; border-bottom-width: 15px; } } </style> </head> <body> <section class=\"cinematic-video-section\"> <!-- Dynamic particle background --> <div class=\"particle-canvas\" id=\"particleCanvas\"></div> <!-- Ambient lighting effect --> <div class=\"ambient-glow\"></div> <!-- Video stage --> <div class=\"video-stage\" tabindex=\"-1\"> <video class=\"brand-video\" id=\"brandVideo\" playsinline preload=\"metadata\" tabindex=\"-1\" > <source src=\"https://cdn.shopify.com/videos/c/o/v/d8e8828223b342a3b6167dbdb1bda547.mp4\" type=\"video/mp4\"> </video> <!-- Loading animation --> <div class=\"loading-ring\" id=\"loadingRing\"></div> <!-- Play control --> <div class=\"play-control\" id=\"playControl\"> <div class=\"play-icon\"></div> </div> <!-- Status indicator --> <div class=\"status-indicator\" id=\"statusIndicator\"></div> <!-- Progress bar --> <div class=\"progress-track\"> <div class=\"progress-bar\" id=\"progressBar\"></div> </div> </div> </section> <script> class CinematicVideoController { constructor() { this.video = document.getElementById('brandVideo'); this.playControl = document.getElementById('playControl'); this.statusIndicator = document.getElementById('statusIndicator'); this.progressBar = document.getElementById('progressBar'); this.loadingRing = document.getElementById('loadingRing'); this.hasPlayed = false; this.init(); this.createParticles(); } init() { this.setupIntersectionObserver(); this.setupVideoEvents(); this.setupPlayControl(); } createParticles() { const canvas = document.getElementById('particleCanvas'); const particleCount = window.innerWidth < 768 ? 8 : 15; for (let i = 0; i < particleCount; i++) { const particle = document.createElement('div'); particle.className = 'floating-particle'; particle.style.left = Math.random() * 100 + '%'; particle.style.animationDelay = Math.random() * 20 + 's'; particle.style.animationDuration = (15 + Math.random() * 10) + 's'; canvas.appendChild(particle); } } setupIntersectionObserver() { const observer = new IntersectionObserver((entries) => { entries.forEach(entry => { if (entry.isIntersecting && !this.hasPlayed) { // Play immediately, no delay this.autoPlay(); } }); }, { threshold: 0.1, // Trigger earlier, only 10% into viewport rootMargin: '100px 0px -50px 0px' // Increase trigger range }); observer.observe(this.video); } setupVideoEvents() { this.video.addEventListener('loadeddata', () => { this.loadingRing.classList.add('hide'); }); this.video.addEventListener('play', () => { this.statusIndicator.classList.add('active'); this.playControl.classList.remove('show'); }); this.video.addEventListener('pause', () => { this.statusIndicator.classList.remove('active'); this.playControl.classList.add('show'); }); this.video.addEventListener('ended', () => { this.statusIndicator.classList.remove('active'); this.playControl.classList.add('show'); this.progressBar.style.width = '0%'; }); this.video.addEventListener('timeupdate', () => { if (this.video.duration) { const progress = (this.video.currentTime / this.video.duration) * 100; this.progressBar.style.width = progress + '%'; } }); this.video.addEventListener('error', () => { this.loadingRing.classList.add('hide'); this.playControl.classList.add('show'); }); } setupPlayControl() { this.playControl.addEventListener('click', () => { this.playVideo(); }); } async autoPlay() { try { // Ensure video plays with sound this.video.muted = false; await this.video.play(); this.hasPlayed = true; } catch (error) { console.log('Audio play failed, trying muted play:', error); try { // If audio play fails, fallback to muted play this.video.muted = true; await this.video.play(); this.hasPlayed = true; // Show play control for users to manually enable sound this.showVolumeControl(); } catch (mutedError) { console.log('Auto-play completely failed, showing play button'); this.playControl.classList.add('show'); } } } showVolumeControl() { // Create volume control hint if (!document.getElementById('volumeHint')) { const volumeHint = document.createElement('div'); volumeHint.id = 'volumeHint'; volumeHint.style.cssText = position: absolute; top: 30px; left: 30px; background: rgba(240, 132, 24, 0.9); color: white; padding: 8px 15px; border-radius: 20px; font-size: 0.9rem; cursor: pointer; backdrop-filter: blur(10px); animation: fadeIn 0.5s ease; z-index: 10; ; volumeHint.innerHTML = '🔊 Click to enable sound'; volumeHint.onclick = () => { this.video.muted = false; volumeHint.remove(); }; this.video.parentElement.appendChild(volumeHint); } } async playVideo() { try { if (this.video.ended) { this.video.currentTime = 0; } // Ensure audio when manually playing this.video.muted = false; await this.video.play(); this.hasPlayed = true; // Remove volume hint const volumeHint = document.getElementById('volumeHint'); if (volumeHint) { volumeHint.remove(); } } catch (error) { console.error('Play failed:', error); } } } // Initialization document.addEventListener('DOMContentLoaded', () => { new CinematicVideoController(); }); // Page visibility handling document.addEventListener('visibilitychange', () => { const video = document.getElementById('brandVideo'); if (document.hidden && !video.paused) { video.pause(); } }); // Scroll parallax effect window.addEventListener('scroll', () => { const section = document.querySelector('.cinematic-video-section'); const rect = section.getBoundingClientRect(); const scrolled = window.pageYOffset; const rate = scrolled * -0.1; // Reduce parallax movement range // Apply parallax effect only when section is visible if (rect.top <= window.innerHeight && rect.bottom >= 0) { section.style.transform = translateY(${rate}px); } }); // Block spacebar toggling/scrolling when focus is inside the cinematic video section document.addEventListener('keydown', (e) => { // Space can be \" \" or code \"Space\" const isSpace = (e.code === 'Space' || e.key === ' '); if (!isSpace) return; const section = document.querySelector('.cinematic-video-section'); const active = document.activeElement; // If user is focused on anything inside the section (including the video), block Space if (section && active && section.contains(active)) { e.preventDefault(); e.stopPropagation(); } }, true); // true = capture phase (important) </script> </body> </html>",
