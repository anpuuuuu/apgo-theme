d: var(--orange-gradient);\n            border-color: transparent;\n            color: var(--text-white);\n        }\n\n        .tab-icon {\n            font-size: 1.5rem;\n        }\n\n        /* 圖片容器 - 修改為直式 */\n        .team-images {\n            position: relative;\n            width: 100%;\n            max-width: 400px;\n            margin: 0 auto;\n            height: 600px;\n            border-radius: 20px;\n            overflow: hidden;\n            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);\n        }\n\n        .team-image-wrapper {\n            position: absolute;\n            width: 100%;\n            height: 100%;\n            opacity: 0;\n            transform: translateX(100px);\n            transition: all 0.5s ease;\n        }\n\n        .team-image-wrapper.active {\n            opacity: 1;\n            transform: translateX(0);\n        }\n\n        /* 使用顏色替代圖片 */\n        .team-image {\n            width: 100%;\n            height: 100%;\n            display: flex;\n            align-items: center;\n            justify-content: center;\n            font-size: 2rem;\n            font-weight: bold;\n            color: rgba(255, 255, 255, 0.8);\n            position: relative;\n            overflow: hidden;\n        }\n\n        /* 影片樣式 */\n        .team-video {\n            width: 100%;\n            height: 100%;\n            object-fit: cover;\n            position: absolute;\n            top: 0;\n            left: 0;\n            z-index: 1;\n        }\n\n        .taiwan-team {\n            background: linear-gradient(135deg, #e74c3c, #c0392b);\n        }\n\n        .sg-my-team {\n            background: linear-gradient(135deg, #3498db, #2980b9);\n        }\n\n        /* 愛心容器 */\n        .hearts-container {\n            position: absolute;\n            bottom: 0;\n            left: 0;\n            width: 100%;\n            height: 100%;\n            pointer-events: none;\n            overflow: hidden;\n            z-index: 2;\n        }\n\n        /* 愛心樣式 */\n        .heart {\n            position: absolute;\n            bottom: -50px;\n            right: 30px;\n            width: 20px;\n            height: 20px;\n            background-color: var(--heart-color, #ff6b6b);\n            transform: rotate(-45deg);\n            animation-timing-function: ease-in-out;\n            opacity: 0.9;\n        }\n\n        .heart::before,\n        .heart::after {\n            content: \"\";\n            position: absolute;\n            width: 20px;\n            height: 20px;\n            background-color: var(--heart-color, #ff6b6b);\n            border-radius: 50%;\n        }\n\n        .heart::before {\n            top: -10px;\n            left: 0;\n        }\n\n        .heart::after {\n            top: 0;\n            left: 10px;\n        }\n\n        /* 不同顏色的愛心 */\n        .heart-red { --heart-color: #ff6b6b; }\n        .heart-pink { --heart-color: #ff69b4; }\n        .heart-orange { --heart-color: #ffa726; }\n        .heart-yellow { --heart-color: #ffeb3b; }\n        .heart-purple { --heart-color: #ba68c8; }\n\n        /* 不同的飄動路徑 */\n        @keyframes floatPath1 {\n            0% {\n                bottom: -50px;\n                transform: rotate(-45deg) scale(0) translateX(0);\n                opacity: 0;\n            }\n            10% {\n                opacity: 0.9;\n                transform: rotate(-45deg) scale(1) translateX(0);\n            }\n            30% {\n                transform: rotate(-45deg) scale(1) translateX(-20px);\n            }\n            50% {\n                transform: rotate(-45deg) scale(1) translateX(10px);\n            }\n            70% {\n                transform: rotate(-45deg) scale(1) translateX(-30px);\n            }\n            90% {\n                opacity: 0.9;\n                transform: rotate(-45deg) scale(1) translateX(0);\n            }\n            100% {\n                bottom: 40%;\n                opacity: 0;\n                transform: rotate(-45deg) scale(0.8) translateX(-15px);\n            }\n        }\n\n        @keyframes floatPath2 {\n            0% {\n                bottom: -50px;\n                transform: rotate(-45deg) scale(0) translateX(0);\n                opacity: 0;\n            }\n            10% {\n                opacity: 0.9;\n                transform: rotate(-45deg) scale(1) translateX(0);\n            }\n            25% {\n                transform: rotate(-45deg) scale(1) translateX(15px);\n            }\n            45% {\n                transform: rotate(-45deg) scale(1) translateX(-25px);\n            }\n            65% {\n                transform: rotate(-45deg) scale(1) translateX(20px);\n            }\n            85% {\n                opacity: 0.9;\n                transform: rotate(-45deg) scale(1) translateX(-10px);\n            }\n            100% {\n                bottom: 40%;\n                opacity: 0;\n                transform: rotate(-45deg) scale(0.8) translateX(25px);\n            }\n        }\n\n        @keyframes floatPath3 {\n            0% {\n                bottom: -50px;\n                transform: rotate(-45deg) scale(0) translateX(0);\n                opacity: 0;\n            }\n            10% {\n                opacity: 0.9;\n                transform: rotate(-45deg) scale(1) translateX(0);\n            }\n            20% {\n                transform: rotate(-45deg) scale(1) translateX(-15px);\n            }\n            40% {\n                transform: rotate(-45deg) scale(1) translateX(-5px);\n            }\n            60% {\n                transform: rotate(-45deg) scale(1) translateX(-25px);\n            }\n            80% {\n                opacity: 0.9;\n                transform: rotate(-45deg) scale(1) translateX(-10px);\n            }\n            100% {\n                bottom: 40%;\n                opacity: 0;\n                transform: rotate(-45deg) scale(0.8) translateX(-20px);\n            }\n        }\n\n        @keyframes floatPath4 {\n            0% {\n                bottom: -50px;\n                transform: rotate(-45deg) scale(0) translateX(0);\n                opacity: 0;\n            }\n            10% {\n                opacity: 0.9;\n                transform: rotate(-45deg) scale(1) translateX(0);\n            }\n            35% {\n                transform: rotate(-45deg) scale(1) translateX(25px);\n            }\n            55% {\n                transform: rotate(-45deg) scale(1) translateX(5px);\n            }\n            75% {\n                transform: rotate(-45deg) scale(1) translateX(30px);\n            }\n            90% {\n                opacity: 0.9;\n                transform: rotate(-45deg) scale(1) translateX(15px);\n            }\n            100% {\n                bottom: 40%;\n                opacity: 0;\n                transform: rotate(-45deg) scale(0.8) translateX(10px);\n            }\n        }\n\n        /* 應用不同路徑 */\n        .heart-path-1 { animation: floatPath1 4.5s ease-in-out forwards; }\n        .heart-path-2 { animation: floatPath2 4.8s ease-in-out forwards; }\n        .heart-path-3 { animation: floatPath3 4.2s ease-in-out forwards; }\n        .heart-path-4 { animation: floatPath4 5s ease-in-out forwards; }\n\n        /* 發光邊框效果 */\n        .team-images::before {\n            content: '';\n            position: absolute;\n            top: -2px;\n            left: -2px;\n            right: -2px;\n            bottom: -2px;\n            background: linear-gradient(45deg, #f08418, #ff9a3c, #f08418);\n            background-size: 300% 300%;\n            border-radius: 20px;\n            z-index: -1;\n            animation: borderGlow 3s ease-in-out infinite;\n            opacity: 0.6;\n        }\n\n        @keyframes borderGlow {\n            0%, 100% { background-position: 0% 50%; }\n            50% { background-position: 100% 50%; }\n        }\n\n        /* 數據展示區 - 單行排列 */\n        .stats-showcase {\n            display: flex;\n            justify-content: center;\n            align-items: center;\n            gap: 60px;\n            margin-bottom: 60px;\n            flex-wrap: wrap;\n            opacity: 0;\n            transform: translateY(30px);\n            animation: fadeInUp 0.8s ease 0.4s forwards;\n        }\n\n        .stat-item {\n            text-align: center;\n            position: relative;\n            padding: 20px;\n        }\n\n        .stat-value {\n            font-size: 3.5rem;\n            font-weight: bold;\n            color: var(--primary-orange);\n            line-height: 1;\n            margin-bottom: 10px;\n            display: flex;\n            align-items: baseline;\n            justify-content: center;\n            gap: 10px;\n            font-family: 'Arial', monospace;\n        }\n\n        .stat-unit {\n            font-size: 1.8rem;\n            color: var(--text-white);\n            font-weight: normal;\n        }\n\n        .stat-label {\n            font-size: 1rem;\n            color: var(--text-gray);\n            font-weight: 600;\n        }\n\n        /* 特殊處理第一個項目的單位 */\n        .stat-label .stat-unit {\n            color: var(--text-gray);\n            font-size: 1rem;\n            font-weight: 600;\n        }\n\n        /* 國旗跑馬燈效果 */\n        .country-carousel {\n            width: 60px;\n            height: 60px;\n            overflow: hidden;\n            position: relative;\n            margin: 0 auto;\n            display: flex;\n            align-items: center;\n            justify-content: center;\n        }\n\n        .country-track {\n            display: flex;\n            animation: scrollFlags 12s linear infinite;\n            width: 360px; /* 6個國旗 x 60px */\n        }\n\n        .country-flag {\n            font-size: 3rem;\n            line-height: 60px;\n            width: 60px;\n            text-align: center;\n            flex-shrink: 0;\n            display: inline-block;\n        }\n\n        @keyframes scrollFlags {\n            0% {\n                transform: translateX(0);\n            }\n            100% {\n                transform: translateX(-180px); /* 移動3個國旗的距離 */\n            }\n        }\n\n        /* 動態光效 */\n        .stat-item::before {\n            content: '';\n            position: absolute;\n            top: 50%;\n            left: 50%;\n            transform: translate(-50%, -50%);\n            width: 120%;\n            height: 120%;\n            background: radial-gradient(circle, rgba(240, 132, 24, 0.2) 0%, transparent 70%);\n            opacity: 0;\n            transition: opacity 0.3s ease;\n            pointer-events: none;\n            border-radius: 50%;\n        }\n\n        .stat-item:hover::before {\n            opacity: 1;\n        }\n\n        /* CTA區域 */\n        .trust-cta-section {\n            text-align: center;\n            opacity: 0;\n            transform: translateY(30px);\n            animation: fadeInUp 0.8s ease 0.6s forwards;\n        }\n\n        /* CTA按鈕 */\n        .cta-container {\n            margin-top: 30px;\n        }\n\n        .cta-button {\n            display: inline-block;\n            padding: 18px 50px;\n            background: linear-gradient(45deg, var(--primary-orange), #ff9a3c);\n            color: var(--text-white);\n            text-decoration: none;\n            font-size: 1.2rem;\n            font-weight: bold;\n            border-radius: 50px;\n            transition: all 0.3s ease;\n            position: relative;\n            overflow: hidden;\n            box-shadow: 0 4px 15px rgba(240, 132, 24, 0.3);\n        }\n\n        .cta-button::before {\n            content: '';\n            position: absolute;\n            top: 50%;\n            left: 50%;\n            width: 0;\n            height: 0;\n            background: rgba(255, 255, 255, 0.3);\n            border-radius: 50%;\n            transform: translate(-50%, -50%);\n            transition: width 0.6s ease, height 0.6s ease;\n        }\n\n        .cta-button:hover {\n            transform: translateY(-3px);\n            box-shadow: 0 10px 30px rgba(240, 132, 24, 0.4);\n        }\n\n        .cta-button:hover::before {\n            width: 300px;\n            height: 300px;\n        }\n\n        /* 數字跳動動畫 */\n        .counting {\n            animation: countPulse 0.3s ease;\n        }\n\n        @keyframes countPulse {\n            0% { transform: scale(1); }\n            50% { transform: scale(1.05); }\n            100% { transform: scale(1); }\n        }\n\n        /* 響應式設計 */\n        @media (max-width: 1024px) {\n            .stats-showcase {\n                gap: 40px;\n            }\n\n            .stat-value {\n                font-size: 3rem;\n            }\n        }\n\n        @media (max-width: 768px) {\n            .livestream-section {\n                padding: 60px 0;\n            }\n\n            .livestream-title {\n                font-size: 1.8rem;\n                margin-bottom: 10px;\n            }\n\n            .livestream-subtitle {\n                font-size: 0.95rem;\n            }\n\n            .livestream-header {\n                margin-bottom: 40px;\n            }\n\n            .team-showcase {\n                margin-bottom: 30px;\n                padding: 0;\n            }\n\n            .team-tabs {\n                gap: 10px;\n            }\n\n            .tab-button {\n                padding: 10px 20px;\n                font-size: 0.9rem;\n            }\n\n            .tab-icon {\n                font-size: 1.2rem;\n            }\n\n            .team-images {\n                height: 600px;\n                max-width: 95%;\n            }\n\n            /* 手機版愛心調整 */\n            .heart {\n                width: 18px;\n                height: 18px;\n                right: 20px;\n            }\n\n            .heart::before,\n            .heart::after {\n                width: 18px;\n                height: 18px;\n            }\n\n            .heart::before {\n                top: -9px;\n            }\n\n            .heart::after {\n                left: 9px;\n            }\n\n            /* 手機版數據展示區 - 保持一行 */\n            .stats-showcase {\n                display: flex;\n                justify-content: center;\n                align-items: center;\n                gap: 15px;\n                flex-wrap: nowrap;\n                padding: 20px 10px;\n            }\n\n            .stat-item {\n                flex: 0 1 auto;\n                padding: 10px 8px;\n                text-align: center;\n            }\n\n            .stat-value {\n                font-size: 2.5rem;\n                gap: 5px;\n            }\n\n            .stat-unit {\n                font-size: 1.3rem;\n            }\n\n            .stat-label {\n                font-size: 1rem;\n                white-space: nowrap;\n            }\n\n            /* 特殊處理第一個項目的單位 */\n            .stat-label .stat-unit {\n                font-size: 1rem;\n            }\n\n            .cta-button {\n                padding: 12px 30px;\n                font-size: 1rem;\n            }\n        }\n\n        @media (max-width: 480px) {\n            .team-images {\n                height: 650px;\n                max-width: 95%;\n            }\n\n            .stats-showcase {\n                gap: 10px;\n                padding: 15px 10px;\n            }\n\n            .stat-item {\n                padding: 5px 5px;\n            }\n\n            .stat-value {\n                font-size: 2rem;\n                gap: 3px;\n            }\n\n            .stat-unit {\n                font-size: 1.1rem;\n            }\n\n            .stat-label {\n                font-size: 0.85rem;\n                white-space: nowrap;\n                line-height: 1.2;\n            }\n\n            /* 特殊處理第一個項目的單位 */\n            .stat-label .stat-unit {\n                font-size: 0.85rem;\n            }\n\n            /* 針對特定數據調整 */\n            .stat-number[data-target=\"5000000\"] {\n                font-size: 1.8rem;\n            }\n\n            .country-carousel {\n                width: 50px;\n                height: 50px;\n            }\n\n            .country-track {\n                width: 300px; /* 6個國旗 x 50px */\n            }\n\n            .country-flag {\n                font-size: 2.5rem;\n                line-height: 50px;\n                width: 50px;\n            }\n\n            @keyframes scrollFlags {\n                0% {\n                    transform: translateX(0);\n                }\n                100% {\n                    transform: translateX(-150px); /* 移動3個國旗的距離 */\n                }\n            }\n\n            .tab-button {\n                padding: 8px 15px;\n                font-size: 0.85rem;\n            }\n\n            .tab-icon {\n                display: none;\n            }\n\n            .heart {\n                width: 16px;\n                height: 16px;\n                right: 15px;\n            }\n\n            .heart::before,\n            .heart::after {\n                width: 16px;\n                height: 16px;\n            }\n\n            .heart::before {\n                top: -8px;\n            }\n\n            .heart::after {\n                left: 8px;\n            }\n        }\n\n        /* 超小螢幕優化 */\n        @media (max-width: 360px) {\n            .stat-value {\n                font-size: 1.8rem;\n            }\n\n            .stat-unit {\n                font-size: 1rem;\n            }\n\n            .stat-label {\n                font-size: 0.8rem;\n            }\n\n            /* 特殊處理第一個項目的單位 */\n            .stat-label .stat-unit {\n                font-size: 0.8rem;\n            }\n\n            .stat-number[data-target=\"5000000\"] {\n                font-size: 1.6rem;\n            }\n\n            .country-carousel {\n                width: 45px;\n                height: 45px;\n            }\n\n            .country-track {\n                width: 270px; /* 6個國旗 x 45px */\n            }\n\n            .country-flag {\n                font-size: 2rem;\n                line-height: 45px;\n                width: 45px;\n            }\n\n            @keyframes scrollFlags {\n                0% {\n                    transform: translateX(0);\n                }\n                100% {\n                    transform: translateX(-135px); /* 移動3個國旗的距離 */\n                }\n            }\n        }\n    </style>\n</head>\n<body>\n    <!-- 第二區塊：直播實力數據 -->\n    <section class=\"livestream-section\">\n        <div class=\"livestream-container\">\n            <!-- 標題區域 -->\n            <div class=\"livestream-header\">\n                <h2 class=\"livestream-title\">跨國直播，品質全民見證</h2>\n                <p class=\"livestream-subtitle\">真實的呈現，是對顧客最直接保障</p>\n            </div>\n\n            <!-- 團隊圖片展示區 -->\n            <div class=\"team-showcase\">\n                <!-- 圖片容器 -->\n                <div class=\"team-images\">\n                    <div class=\"team-image-wrapper active\" id=\"taiwan-team\">\n                        <div class=\"team-image taiwan-team\">\n                            <video \n                                class=\"team-video\"\n                                src=\"https://cdn.shopify.com/videos/c/o/v/9a0fa6d2993b468b9f3b3ecc48056039.mp4\"\n                                autoplay\n                                muted\n                                playsinline\n                                poster=\"\">\n                            </video>\n                            <!-- 愛心容器 -->\n                            <div class=\"hearts-container\" id=\"taiwan-hearts\"></div>\n                        </div>\n                    </div>\n                    <div class=\"team-image-wrapper\" id=\"sg-my-team\">\n                        <div class=\"team-image sg-my-team\">\n                            <video \n                                class=\"team-video\"\n                                src=\"https://cdn.shopify.com/videos/c/o/v/4ddb944f1ef94ed4bf6a6f3fe93a0a6c.mp4\"\n                                autoplay\n                                muted\n                                playsinline\n                                poster=\"\">\n                            </video>\n                            <!-- 愛心容器 -->\n                            <div class=\"hearts-container\" id=\"sg-my-hearts\"></div>\n                        </div>\n                    </div>\n                </div>\n\n                <!-- 分頁按鈕 -->\n                <div class=\"team-tabs\">\n                    <button class=\"tab-button active\" data-team=\"taiwan\">\n                        <span class=\"tab-icon\">🇹🇼</span>\n                        <span>台灣團隊</span>\n                    </button>\n                    <button class=\"tab-button\" data-team=\"sg-my\">\n                        <span class=\"tab-icon\">🇸🇬🇲🇾</span>\n                        <span>新加坡/馬來西亞團隊</span>\n                    </button>\n                </div>\n            </div>\n\n            <!-- 數據展示區 - 單行排列 -->\n            <div class=\"stats-showcase\">\n                <div class=\"stat-item\">\n                    <div class=\"stat-value\">\n                        <span class=\"stat-number\" data-target=\"5000000\">0</span>\n                    </div>\n                    <div class=\"stat-label\">\n                        <span class=\"stat-unit\">組</span>年銷售\n                    </div>\n                </div>\n\n                <div class=\"stat-item\">\n                    <div class=\"stat-value\">\n                        <div class=\"country-carousel\">\n                            <div class=\"country-track\">\n                                <span class=\"country-flag\">🇹🇼</span>\n                                <span class=\"country-flag\">🇸🇬</span>\n                                <span class=\"country-flag\">🇲🇾</span>\n                                <span class=\"country-flag\">🇹🇼</span>\n                                <span class=\"country-flag\">🇸🇬</span>\n                                <span class=\"country-flag\">🇲🇾</span>\n                            </div>\n                        </div>\n                    </div>\n                    <div class=\"stat-label\">穩定銷售國家</div>\n                </div>\n\n                <div class=\"stat-item\">\n                    <div class=\"stat-value\">\n                        <span class=\"stat-number\" data-target=\"10\">0</span>\n                        <span class=\"stat-unit\">年</span>\n                    </div>\n                    <div class=\"stat-label\">直播經驗</div>\n                </div>\n\n                <div class=\"stat-item\">\n                    <div class=\"stat-value\">\n                        <span class=\"stat-number\" data-target=\"30\">0</span>\n                        <span class=\"stat-unit\">位</span>\n                    </div>\n                    <div class=\"stat-label\">專業直播主</div>\n                </div>\n            </div>\n\n            <!-- CTA -->\n            <div class=\"trust-cta-section\">\n                <div class=\"cta-container\">\n                    <a href=\"https://apgo.tw/pages/buy_atomic_coating\" target=\"_self\" class=\"cta-button\" onclick=\"window.location.href='https://apgo.tw/pages/buy_atomic_coating'; return false;\">了解更多</a>\n                </div>\n            </div>\n        </div>\n    </section>\n\n    <script>\n        // 創建愛心的函數\n        function createHeart(container) {\n            const heart = document.createElement('div');\n            const colors = ['heart-red', 'heart-pink', 'heart-orange', 'heart-yellow', 'heart-purple'];\n            const paths = ['heart-path-1', 'heart-path-2', 'heart-path-3', 'heart-path-4'];\n            const randomColor = colors[Math.floor(Math.random() * colors.length)];\n            const randomPath = paths[Math.floor(Math.random() * paths.length)];\n            \n            heart.className = `heart ${randomColor} ${randomPath}`;\n            \n            // 固定在右側，稍微有一點隨機偏移\n            const randomOffset = Math.random() * 10 - 5; // -5 到 +5 的偏移\n            heart.style.right = (30 + randomOffset) + 'px';\n            \n            // 隨機大小\n            const randomScale = 0.85 + Math.random() * 0.3;\n            heart.style.transform = `rotate(-45deg) scale(${randomScale})`;\n            \n            // 隨機動畫時長（增加變化）\n            const randomDuration = 4 + Math.random() * 2;\n            heart.style.animationDuration = randomDuration + 's';\n            \n            container.appendChild(heart);\n            \n            // 動畫結束後移除\n            setTimeout(() => {\n                heart.remove();\n            }, randomDuration * 1000);\n        }\n\n        // 持續生成愛心\n        function startHeartAnimation() {\n            const activeWrapper = document.querySelector('.team-image-wrapper.active');\n            if (activeWrapper) {\n                const heartsContainer = activeWrapper.querySelector('.hearts-container');\n                if (heartsContainer) {\n                    createHeart(heartsContainer);\n                }\n            }\n        }\n\n        // 每隔一段時間生成愛心\n        let heartInterval = setInterval(startHeartAnimation, 800);\n\n        // 分頁切換功能\n        function initTabSwitching() {\n            const tabButtons = document.querySelectorAll('.tab-button');\n            const teamImages = document.querySelectorAll('.team-image-wrapper');\n            const taiwanVideo = document.querySelector('#taiwan-team .team-video');\n            const sgMyVideo = document.querySelector('#sg-my-team .team-video');\n\n            // 手動切換功能\n            tabButtons.forEach(button => {\n                button.addEventListener('click', function() {\n                    // 移除所有 active 類\n                    tabButtons.forEach(btn => btn.classList.remove('active'));\n                    teamImages.forEach(img => img.classList.remove('active'));\n\n                    // 添加 active 類到點擊的按鈕\n                    this.classList.add('active');\n\n                    // 顯示對應的圖片\n                    const teamType = this.dataset.team;\n                    const targetImage = document.getElementById(`${teamType}-team`);\n                    if (targetImage) {\n                        targetImage.classList.add('active');\n                    }\n\n                    // 暫停非活動影片，播放活動影片\n                    if (teamType === 'taiwan') {\n                        taiwanVideo.play();\n                        sgMyVideo.pause();\n                        sgMyVideo.currentTime = 0;\n                    } else {\n                        sgMyVideo.play();\n                        taiwanVideo.pause();\n                        taiwanVideo.currentTime = 0;\n                    }\n                });\n            });\n\n            // 自動切換功能 - 當台灣影片播放結束時\n            if (taiwanVideo) {\n                taiwanVideo.addEventListener('ended', function() {\n                    // 切換到新馬團隊\n                    const sgMyButton = document.querySelector('[data-team=\"sg-my\"]');\n                    const taiwanButton = document.querySelector('[data-team=\"taiwan\"]');\n                    \n                    // 更新按鈕狀態\n                    taiwanButton.classList.remove('active');\n                    sgMyButton.classList.add('active');\n                    \n                    // 切換影片\n                    document.getElementById('taiwan-team').classList.remove('active');\n                    document.getElementById('sg-my-team').classList.add('active');\n                    \n                    // 播放新馬影片\n                    sgMyVideo.currentTime = 0;\n                    sgMyVideo.play();\n                });\n            }\n\n            // 當新馬影片播放結束時，切回台灣影片\n            if (sgMyVideo) {\n                sgMyVideo.addEventListener('ended', function() {\n                    // 切換回台灣團隊\n                    const sgMyButton = document.querySelector('[data-team=\"sg-my\"]');\n                    const taiwanButton = document.querySelector('[data-team=\"taiwan\"]');\n                    \n                    // 更新按鈕狀態\n                    sgMyButton.classList.remove('active');\n                    taiwanButton.classList.add('active');\n                    \n                    // 切換影片\n                    document.getElementById('sg-my-team').classList.remove('active');\n                    document.getElementById('taiwan-team').classList.add('active');\n                    \n                    // 播放台灣影片\n                    taiwanVideo.currentTime = 0;\n                    taiwanVideo.play();\n                });\n            }\n        }\n\n        // 數字跳動動畫\n        function animateNumbers() {\n            const numbers = document.querySelectorAll('.stat-number');\n            \n            numbers.forEach((number, index) => {\n                const target = parseInt(number.getAttribute('data-target'));\n                const duration = 2000;\n                const increment = target / (duration / 16);\n                let current = 0;\n                \n                // 延遲啟動，創造依序動畫效果\n                setTimeout(() => {\n                    const updateNumber = () => {\n                        current += increment;\n                        if (current < target) {\n                            number.textContent = formatNumber(Math.floor(current));\n                            number.classList.add('counting');\n                            setTimeout(() => number.classList.remove('counting'), 100);\n                            requestAnimationFrame(updateNumber);\n                        } else {\n                            number.textContent = formatNumber(target);\n                        }\n                    };\n                    updateNumber();\n                }, index * 200);\n            });\n        }\n\n        // 格式化數字（添加千分位）\n        function formatNumber(num) {\n            if (num >= 1000000) {\n                return Math.floor(num / 10000) + '萬';\n            } else if (num >= 10000) {\n                return (num / 10000).toFixed(0) + '萬';\n            }\n            return num.toString().replace(/\\B(?=(\\d{3})+(?!\\d))/g, ',');\n        }\n\n        // Intersection Observer 監聽元素進入視窗\n        const observerOptions = {\n            threshold: 0.3,\n            rootMargin: '0px'\n        };\n\n        const observer = new IntersectionObserver((entries) => {\n            entries.forEach(entry => {\n                if (entry.isIntersecting) {\n                    animateNumbers();\n                    observer.disconnect();\n                }\n            });\n        }, observerOptions);\n\n        // 開始觀察\n        document.addEventListener('DOMContentLoaded', () => {\n            initTabSwitching();\n            \n            const section = document.querySelector('.stats-showcase');\n            if (section) {\n                observer.observe(section);\n            }\n        });\n\n        // CTA按鈕波紋效果\n        document.querySelector('.cta-button').addEventListener('click', function(e) {\n            const ripple = document.createElement('span');\n            const rect = this.getBoundingClientRect();\n            const size = Math.max(rect.width, rect.height);\n            const x = e.clientX - rect.left - size / 2;\n            const y = e.clientY - rect.top - size / 2;\n            \n            ripple.style.cssText = `\n                position: absolute;\n                width: ${size}px;\n                height: ${size}px;\n                border-radius: 50%;\n                background: rgba(255, 255, 255, 0.5);\n                left: ${x}px;\n                top: ${y}px;\n                pointer-events: none;\n                transform: scale(0);\n                animation: rippleEffect 0.6s ease-out;\n            `;\n            \n            this.appendChild(ripple);\n            setTimeout(() => ripple.remove(), 600);\n        });\n\n        // 添加波紋動畫樣式\n        const style = document.createElement('style');\n        style.textContent = `\n            @keyframes rippleEffect {\n                to {\n                    transform: scale(4);\n                    opacity: 0;\n                }\n            }\n        `;\n        document.head.appendChild(style);\n\n        // 清理定時器（當頁面關閉時）\n        window.addEventListener('beforeunload', () => {\n            clearInterval(heartInterval);\n        });\n    </script>\n</body>\n</html>",
        "color_scheme": "scheme-a27d2d12-7174-40fe-a01c-a128174b4c26",
