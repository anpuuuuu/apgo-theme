    <div class=\"floating-particles\">\n            <div class=\"particle\"></div>\n            <div class=\"particle\"></div>\n            <div class=\"particle\"></div>\n            <div class=\"particle\"></div>\n            <div class=\"particle\"></div>\n            <div class=\"particle\"></div>\n            <div class=\"particle\"></div>\n            <div class=\"particle\"></div>\n            <div class=\"particle\"></div>\n            <div class=\"particle\"></div>\n            <div class=\"particle\"></div>\n            <div class=\"particle\"></div>\n            <div class=\"particle\"></div>\n            <div class=\"particle\"></div>\n            <div class=\"particle\"></div>\n            <div class=\"particle\"></div>\n            <div class=\"particle\"></div>\n            <div class=\"particle\"></div>\n            <div class=\"particle\"></div>\n            <div class=\"particle\"></div>\n        </div>\n\n        <!-- 主要內容 -->\n        <div class=\"hero-content\">\n            <div class=\"content-wrapper\">\n                <div class=\"brand-logo\">\n                    <img \n                        src=\"https://cdn.shopify.com/s/files/1/0760/8002/1755/files/logo.png?v=1749123901\" \n                        alt=\"APGO 專業鍍膜專家\"\n                    />\n                </div>\n                \n                <h1 class=\"hero-title\">\n                    我們專注於<span class=\"title-highlight\">鍍膜</span>\n                </h1>\n                \n                <p class=\"hero-subtitle\">\n                    因為它比打蠟<span class=\"subtitle-highlight\">更輕鬆</span>、<span class=\"subtitle-highlight\">更持久</span>、<span class=\"subtitle-highlight\">更閃亮</span>\n                </p>\n                \n                <div class=\"cta-container\">\n                    <a href=\"https://apgo.tw/pages/buy_atomic_coating\" target=\"_self\" class=\"cta-button\" onclick=\"window.location.href='https://apgo.tw/pages/buy_atomic_coating'; return false;\">\n                        <span>立即挑選適合您的鍍膜</span>\n                    </a>\n                </div>\n            </div>\n        </div>\n\n        <!-- 滾動提示 -->\n        <div class=\"scroll-indicator\">\n            <div class=\"scroll-text\">探索更多</div>\n            <div class=\"scroll-arrow\"></div>\n        </div>\n    </section>\n\n    <script>\n        // 滾動指示器點擊事件\n        document.querySelector('.scroll-indicator').addEventListener('click', function() {\n            window.scrollTo({\n                top: window.innerHeight,\n                behavior: 'smooth'\n            });\n        });\n\n        // 視差效果\n        window.addEventListener('scroll', function() {\n            const scrolled = window.pageYOffset;\n            const heroImage = document.querySelector('.hero-image');\n            const scrollIndicator = document.querySelector('.scroll-indicator');\n            const parallaxSpeed = 0.5;\n            \n            if (scrolled < window.innerHeight) {\n                heroImage.style.transform = `scale(1.05) translateY(${scrolled * parallaxSpeed}px)`;\n            }\n            \n            // 滾動指示器消失邏輯\n            if (scrolled > 100) {\n                scrollIndicator.classList.add('hide');\n            } else {\n                scrollIndicator.classList.remove('hide');\n            }\n        });\n\n        // 鍵盤快捷鍵支援\n        document.addEventListener('keydown', function(e) {\n            if (e.key === 'ArrowDown' || e.key === ' ') {\n                e.preventDefault();\n                window.scrollTo({\n                    top: window.innerHeight,\n                    behavior: 'smooth'\n                });\n            }\n        });\n\n        // 預載下一區域的內容（如果存在）\n        window.addEventListener('load', function() {\n            // 預載圖片以提升用戶體驗\n            const nextSectionImages = document.querySelectorAll('img[data-src]');\n            nextSectionImages.forEach(img => {\n                const observer = new IntersectionObserver((entries, observer) => {\n                    entries.forEach(entry => {\n                        if (entry.isIntersecting) {\n                            const img = entry.target;\n                            img.src = img.dataset.src;\n                            img.removeAttribute('data-src');\n                            observer.unobserve(img);\n                        }\n                    });\n                });\n                observer.observe(img);\n            });\n        });\n    </script>\n</body>\n</html>",
