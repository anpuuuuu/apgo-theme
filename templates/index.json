scroll-dot.active {\n      background: #f08418 !important;\n      transform: scale(1.2) !important;\n    }\n    \n    .product-block {\n      flex: 0 0 auto;\n      width: 420px;\n      height: 400px;\n      position: relative;\n      display: flex;\n      align-items: center;\n      justify-content: center;\n    }\n    .product-card {\n      position: relative;\n      width: 100%;\n      height: 100%;\n      background: #252525 !important;\n      border-radius: 16px;\n      padding: 24px;\n      border: 1px solid #3a3a3a;\n      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);\n      transition: all 0.3s ease;\n      display: flex;\n      flex-direction: row;\n      align-items: stretch;\n    }\n    \n    .product-card:hover {\n      box-shadow: 0 12px 32px rgba(240, 132, 24, 0.3);\n      transform: translateY(-4px);\n    }\n    \n    .product-card-top-bar {\n      position: absolute;\n      top: 0;\n      left: 50%;\n      transform: translateX(-50%);\n      width: 85%;\n      height: 4px;\n      background: linear-gradient(90deg, #f08418, #ff9a3c);\n      border-radius: 16px;\n      z-index: 1;\n    }\n    \n    .product-badge {\n      position: absolute;\n      top: 16px;\n      right: 16px;\n      background: #f08418;\n      color: white;\n      padding: 1px 12px;\n      border-radius: 15px;\n      font-size: 0.9rem;\n      font-weight: bold;\n      z-index: 10;\n    }\n\n    .product-image {\n      width: 160px;\n      height: 100%;\n      display: flex;\n      align-items: center;\n      justify-content: center;\n      overflow: hidden;\n      flex-shrink: 0;\n    }\n\n    .product-image img {\n      width: auto;\n      height: 90%;\n      max-width: 100%;\n      object-fit: contain;\n      display: block;\n      filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.3));\n    }\n\n    .product-content {\n      flex: 1;\n      display: flex;\n      flex-direction: column;\n      padding-left: 20px;\n      justify-content: center;\n      height: 100%;\n      position: relat