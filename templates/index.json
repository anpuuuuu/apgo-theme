pages/buy_atomic_coating\" target=\"_self\" class=\"cta-button\" onclick=\"window.location.href='https://apgo.tw/pages/buy_atomic_coating'; return false;\">Learn More</a>\n                </div>\n            </div>\n        </div>\n    </section>\n\n    <script>\n        // Function to create hearts\n        function createHeart(container) {\n            const heart = document.createElement('div');\n            const colors = ['heart-red', 'heart-pink', 'heart-orange', 'heart-yellow', 'heart-purple'];\n            const paths = ['heart-path-1', 'heart-path-2', 'heart-path-3', 'heart-path-4'];\n            const randomColor = colors[Math.floor(Math.random() * colors.length)];\n            const randomPath = paths[Math.floor(Math.random() * paths.length)];\n            \n            heart.className = `heart ${randomColor} ${randomPath}`;\n            \n            // Fixed on the right side with slight random offset\n            const randomOffset = Math.random() * 10 - 5; // -5 to +5 offset\n            heart.style.right = (30 + randomOffset) + 'px';\n            \n            // Random size\n            const randomScale = 0.85 + Math.random() * 0.3;\n            heart.style.transform = `rotate(-45deg) scale(${randomScale})`;\n            \n            // Random animation duration (add variation)\n            const randomDuration = 4 + Math.random() * 2;\n            heart.style.animationDuration = randomDuration + 's';\n            \n            container.appendChild(heart);\n            \n            // Remove after animation ends\n            setTimeout(() => {\n                heart.remove();\n            }, randomDuration * 1000);\n        }\n\n        // Continuously generate hearts\n        function startHeartAnimation() {\n            const activeWrapper = document.querySelector('.team-image-wrapper.active');\n            if (activeWrapper) {\n                const heartsContainer = activeWrapper.querySelector('.hearts-container');\n                if (heartsContainer) {\n                    createHeart(heartsContainer);\n                }\n            }\n        }\n\n        // Generate hearts at intervals\n        let heartInterval = setInterval(startHeartAnimation, 800);\n\n        // Tab switching functionality\n        function initTabSwitching() {\n            const tabButtons = document.querySelectorAll('.tab-button');\n            const teamImages = document.querySelectorAll('.team-image-wrapper');\n            const taiwanVideo = document.querySelector('#taiwan-team .team-video');\n            const sgMyVideo = document.querySelector('#sg-my-team .team-video');\n\n            // Manual switching functionality\n            tabButtons.forEach(button => {\n                button.addEventListener('click', function() {\n                    // Remove all active classes\n                    tabButtons.forEach(btn => btn.classList.remove('active'));\n                    teamImages.forEach(img => img.classList.remove('active'));\n\n                    // Add active class to clicked button\n                    this.classList.add('active');\n\n                    // Show corresponding image\n                    const teamType = this.dataset.team;\n                    const targetImage = document.getElementById(`${teamType}-team`);\n                    if (targetImage) {\n                        targetImage.classList.add('active');\n                    }\n\n                    // Pause inactive video, play active video\n                    if (teamType === 'taiwan') {\n                        taiwanVideo.play();\n                        sgMyVideo.pause();\n                        sgMyVideo.currentTime = 0;\n                    } else {\n                        sgMyVideo.play();\n                        taiwanVideo.pause();\n                        taiwanVideo.currentTime = 0;\n                    }\n                });\n            });\n\n            // Auto switching functionality - when Taiwan video ends\n            if (taiwanVideo) {\n                taiwanVideo.addEventListener('ended', function() {\n                    // Switch to Singapore/Malaysia team\n                    const sgMyButton = document.querySelector('[data-team=\"sg-my\"]');\n                    const taiwanButton = document.querySelector('[data-team=\"taiwan\"]');\n                    \n                    // Update button status\n                    taiwanButton.classList.remove('active');\n                    sgMyButton.classList.add('active');\n                    \n                    // Switch videos\n                    document.getElementById('taiwan-team').classList.remove('active');\n                    document.getElementById('sg-my-team').classList.add('active');\n                    \n                    // Play Singapore/Malaysia video\n                    sgMyVideo.currentTime = 0;\n                    sgMyVideo.play();\n                });\n            }\n\n            // When Singapore/Malaysia video ends, switch back to Taiwan video\n            if (sgMyVideo) {\n                sgMyVideo.addEventListener('ended', function() {\n                    // Switch back to Taiwan team\n                    const sgMyButton = document.querySelector('[data-team=\"sg-my\"]');\n                    const taiwanButton = document.querySelector('[data-team=\"taiwan\"]');\n                    \n                    // Update button status\n                    sgMyButton.classList.remove('active');\n                    taiwanButton.classList.add('active');\n                    \n                    // Switch videos\n                    document.getElementById('sg-my-team').classList.remove('active');\n                    document.getElementById('taiwan-team').classList.add('active');\n                    \n                    // Play Taiwan video\n                    taiwanVideo.currentTime = 0;\n                    taiwanVideo.play();\n                });\n            }\n        }\n\n        // Number animation\n        function animateNumbers() {\n            const numbers = document.querySelectorAll('.stat-number');\n            \n            numbers.forEach((number, index) => {\n                const target = parseInt(number.getAttribute('data-target'));\n                const duration = 2000;\n                const increment = target / (duration / 16);\n                let current = 0;\n                \n                // Delayed start to create sequential animation effect\n                setTimeout(() => {\n                    const updateNumber = () => {\n                        current += increment;\n                        if (current < target) {\n                            number.textContent = formatNumber(Math.floor(current));\n                            number.classList.add('counting');\n                            setTimeout(() => number.classList.remove('counting'), 100);\n                            requestAnimationFrame(updateNumber);\n                        } else {\n                            number.textContent = formatNumber(target);\n                        }\n                    };\n                    updateNumber();\n                }, index * 200);\n            });\n        }\n\n        // Format numbers (add thousands separator)\n        function formatNumber(num) {\n            if (num >= 1000000) {\n                return Math.floor(num / 1000) + 'K';\n            } else if (num >= 1000) {\n                return (num / 1000).toFixed(0) + 'K';\n            }\n            return num.toString().replace(/\\B(?=(\\d{3})+(?!\\d))/g, ',');\n        }\n\n        // Intersection Observer to monitor elements entering viewport\n        const observerOptions = {\n            threshold: 0.3,\n            rootMargin: '0px'\n        };\n\n        const observer = new IntersectionObserver((entries) => {\n            entries.forEach(entry => {\n                if (entry.isIntersecting) {\n                    animateNumbers();\n                    observer.disconnect();\n                }\n            });\n        }, observerOptions);\n\n        // Start observing\n        document.addEventListener('DOMContentLoaded', () => {\n            initTabSwitching();\n            \n            const section = document.querySelector('.stats-showcase');\n            if (section) {\n                observer.observe(section);\n            }\n        });\n\n        // CTA button ripple effect\n        document.querySelector('.cta-button').addEventListener('click', function(e) {\n            const ripple = document.createElement('span');\n            const rect = this.getBoundingClientRect();\n            const size = Math.max(rect.width, rect.height);\n            const x = e.clientX - rect.left - size / 2;\n            const y = e.clientY - rect.top - size / 2;\n            \n            ripple.style.cssText = `\n                position: absolute;\n                width: ${size}px;\n                height: ${size}px;\n                border-radius: 50%;\n                background: rgba(255, 255, 255, 0.5);\n                left: ${x}px;\n                top: ${y}px;\n                pointer-events: none;\n                transform: scale(0);\n                animation: rippleEffect 0.6s ease-out;\n            `;\n            \n            this.appendChild(ripple);\n            setTimeout(() => ripple.remove(), 600);\n        });\n\n        // Add ripple animation styles\n        const style = document.createElement('style');\n        style.textContent = `\n            @keyframes rippleEffect {\n                to {\n                    transform: scale(4);\n                    opacity: 0;\n                }\n            }\n        `;\n        document.head.appendChild(style);\n\n        // Clean up timer (when page closes)\n        window.addEventListener('beforeunload', () => {\n            clearInterval(heartInterval);\n        });\n    </script>\n</body>\n</html>",
