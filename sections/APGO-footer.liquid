    /* Footer å°ˆç”¨æ¨£å¼ - æ‰€æœ‰æ¨£å¼éƒ½åŠ ä¸Š .apgo-footer å‰ç¶´ */
    .apgo-footer * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
  
    .apgo-footer {
      font-family: {{ section.settings.font_family }};
      background: {{ section.settings.footer_bg_color }};
      color: {{ section.settings.footer_text_color }};
      position: relative;
      overflow: hidden;
      width: 100%;
    }
  
    /* é ‚éƒ¨è£é£¾ç·š */
    {% if section.settings.show_top_decoration %}
    .apgo-footer::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: {{ section.settings.decoration_height }}px;
      background: linear-gradient(90deg, 
        transparent 0%, 
        {{ section.settings.accent_color }} 20%, 
        {{ section.settings.accent_hover_color }} 50%, 
        {{ section.settings.accent_color }} 80%, 
        transparent 100%
      );
      animation: apgo-shimmer {{ section.settings.animation_speed }}s linear infinite;
    }
    {% endif %}
  
    @keyframes apgo-shimmer {
      0% { transform: translateX(-100%); }
      100% { transform: translateX(100%); }
    }
  
    /* ä¸»è¦å…§å®¹å€ */
    .apgo-footer-main {
      padding: {{ section.settings.main_padding_top }}px 0 {{ section.settings.main_padding_bottom }}px;
      background: {{ section.settings.main_bg_color }};
      position: relative;
    }
  
    /* èƒŒæ™¯è£é£¾ */
    {% if section.settings.show_bg_decoration %}
    .apgo-footer-main::before {
      content: '';
      position: absolute;
      top: 0;
      right: -200px;
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, {{ section.settings.decoration_color }} 0%, transparent 70%);
      animation: apgo-float {{ section.settings.float_animation_speed }}s ease-in-out infinite;
    }
    {% endif %}
  
    @keyframes apgo-float {
      0%, 100% { transform: translate(0, 0) rotate(0deg); }
      50% { transform: translate(-50px, -30px) rotate(180deg); }
    }
  
    .apgo-footer-container {
      max-width: {{ section.settings.container_max_width }}px;
      margin: 0 auto;
      padding: 0 {{ section.settings.container_padding }}px;
      position: relative;
      z-index: 1;
    }
  
    .apgo-footer-content {
      display: grid;
      grid-template-columns: {{ section.settings.grid_columns }};
      gap: {{ section.settings.grid_gap }}px;
      margin-bottom: {{ section.settings.content_margin_bottom }}px;
    }
  
    /* å“ç‰Œå€åŸŸ */
