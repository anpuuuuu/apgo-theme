    <script>
    (function(){
      const carousels = document.querySelectorAll('.team-carousel');
      carousels.forEach(root => {
        const track = root.querySelector('.carousel-track');
        const cards = Array.from(track.children);
        const prevBtn = root.querySelector('[data-arrow="prev"]');
        const nextBtn = root.querySelector('[data-arrow="next"]');
        const dotsWrap = root.querySelector('.carousel-dots');
        if(cards.length === 0) return;

        let current = 0;
        let autoTimer = null;
        const delay = 4000;
        const positions = ['active','next','far-next','far-prev','prev'];

        // å»ºç«‹æŒ‡ç¤ºé»
        if(dotsWrap){
          dotsWrap.innerHTML = cards.map((_,i)=>`<span class="carousel-dot" data-idx="${i}"></span>`).join('');
        }
        const dots = dotsWrap ? Array.from(dotsWrap.children) : [];

        function applyClasses(){
          cards.forEach((card, i) => {
            card.classList.remove(...positions, 'hidden');
            const rel = (i - current + cards.length) % cards.length;
            switch(rel){
              case 0: card.classList.add('active'); break;
              case 1: card.classList.add('next'); break;
              case 2: card.classList.add('far-next'); break;
              case cards.length-1: card.classList.add('prev'); break;
              case cards.length-2: card.classList.add('far-prev'); break;
              default: card.classList.add('hidden');
            }
          });
          dots.forEach((d,i)=> d.classList.toggle('active', i===current));
        }

        function go(delta){
          current = (current + delta + cards.length) % cards.length;
          applyClasses();
        }

        prevBtn && prevBtn.addEventListener('click', ()=> { stop(); go(-1); start(); });
        nextBtn && nextBtn.addEventListener('click', ()=> { stop(); go(1); start(); });
        dots.forEach((d,i)=> d.addEventListener('click', ()=> { stop(); current=i; applyClasses(); start(); }));

        // è‡ªå‹•æ’­æ”¾
        function start(){ stop(); autoTimer = setInterval(()=> go(1), delay); }
        function stop(){ if(autoTimer){ clearInterval(autoTimer); autoTimer = null; } }

        // è§¸æ§æ»‘å‹•
        let sx=0, cx=0, dragging=false;
        track.addEventListener('touchstart', e=>{ dragging=true; sx=e.touches[0].clientX; stop(); }, {passive:true});
        track.addEventListener('touchmove', e=>{ if(!dragging) return; cx=e.touches[0].clientX; }, {passive:true});
        track.addEventListener('touchend', ()=>{ if(!dragging) return; dragging=false; const dx=cx-sx; const th=40; if(Math.abs(dx)>th){ go(dx>0?-1:1); } start(); });

        // æ»‘å…¥æ’­æ”¾ / æ»‘å‡ºæš«åœå½±ç‰‡
        cards.forEach(card => {
          const v = card.querySelector('.team-video');
          if(!v) return;
          card.addEventListener('mouseenter', ()=> v.play());
          card.addEventListener('mouseleave', ()=> v.pause());
        });

        applyClasses();
        start();
      });
    })();
